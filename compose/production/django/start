#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

echo COMPILETRANSLATIONS
python manage.py compilemessages
python manage.py compilejsi18n

echo COLLECTSTATIC
python /app/manage.py collectstatic --noinput

echo MIGRATE
python /app/manage.py showmigrations --settings config.settings.production
python /app/manage.py migrate --settings config.settings.production

compress_enabled() {
python << END
import sys

from environ import Env

env = Env(COMPRESS_ENABLED=(bool, True))
if env('COMPRESS_ENABLED'):
    sys.exit(0)
else:
    sys.exit(1)

END
}

if compress_enabled; then
  # NOTE this command will fail if django-compressor is disabled
  echo COMPRESSING
  python /app/manage.py compress
fi

echo RUNNING
exec /usr/local/bin/gunicorn config.asgi --bind 0.0.0.0:5000 --chdir=/app -k uvicorn_worker.UvicornWorker
